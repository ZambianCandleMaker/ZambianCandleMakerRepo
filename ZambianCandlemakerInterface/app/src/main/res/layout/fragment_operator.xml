<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/operator_view"
    tools:context="edu.rose_hulman.trottasn.zambiancandlemakerinterface.OperatorFragment">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Apply"
        android:id="@+id/apply_vert_jog_button"
        android:layout_toEndOf="@+id/unit_spinner"
        android:layout_toRightOf="@+id/unit_spinner"
        android:layout_alignBottom="@+id/unit_spinner" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Apply"
        android:id="@+id/apply_rot_jog_button"
        android:layout_alignBottom="@+id/degrees_unit"
        android:layout_toEndOf="@+id/degrees_unit"
        android:layout_toRightOf="@+id/degrees_unit" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/jog_vert_prompt"
        android:text="Vertical Jog"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Rotational Jog"
        android:id="@+id/jog_rot_prompt"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/vert_spinner"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Apply"
        android:id="@+id/apply_dips_button"
        android:layout_alignBottom="@+id/dips_per_rev_spinner"
        android:layout_toEndOf="@+id/dips_per_rev_spinner"
        android:layout_toRightOf="@+id/dips_per_rev_spinner" />

    <Button
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/vert_up"
        android:background="@drawable/ic_up_jog"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/vert_down"
        android:layout_toLeftOf="@+id/vert_down" />

    <Button
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/vert_down"
        android:background="@drawable/ic_down_jog"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="false"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true" />

    <Spinner
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:id="@+id/vert_spinner"
        android:layout_below="@+id/jog_vert_prompt"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        android:spinnerMode="dropdown"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/rot_right"
        android:background="@drawable/ic_right_rotate"
        android:layout_toEndOf="@+id/vert_up"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/vert_down"
        android:layout_marginRight="10dp" />

    <Button
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/rot_left"
        android:background="@drawable/ic_left_rotate"
        android:layout_below="@+id/vert_up"
        android:layout_toStartOf="@+id/rot_right" />

    <Button
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/pause_button"
        android:background="@drawable/ic_pause_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="degrees"
        android:id="@+id/degrees_unit"
        android:layout_alignBottom="@+id/rot_spinner"
        android:layout_toEndOf="@+id/rot_spinner"
        android:layout_toRightOf="@+id/rot_spinner" />

    <Spinner
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/rot_spinner"
        android:spinnerMode="dropdown"
        android:layout_below="@+id/jog_rot_prompt"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        android:layout_alignParentLeft="true" />

    <Spinner
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:id="@+id/dips_per_rev_spinner"
        android:layout_below="@+id/dips_per_prompt"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:spinnerMode="dropdown" />

    <Spinner
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/vert_spinner"
        android:layout_toEndOf="@+id/vert_spinner"
        android:layout_below="@+id/jog_vert_prompt"
        android:spinnerMode="dropdown"
        android:id="@+id/unit_spinner" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Dips Per Revolution"
        android:id="@+id/dips_per_prompt"
        android:layout_below="@+id/rot_spinner"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />

</RelativeLayout>
